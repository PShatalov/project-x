{
	"compilerOptions": {
	  "target": "es2022",
	  "module": "commonjs",
	  "esModuleInterop": true,
	  "moduleResolution": "node",
	  "outDir": "dist",
	  "rootDir": "./",
	  "strict": true,
	  "experimentalDecorators": true,
	  "emitDecoratorMetadata": true,
	  "strictPropertyInitialization": false,
	  "resolveJsonModule": true,
	  "inlineSourceMap": true,
	  "noUnusedLocals": true,
	  "noUnusedParameters": true,
	  "lib": ["es2022"]
	},
	"include": ["src", "test"],
  }
  